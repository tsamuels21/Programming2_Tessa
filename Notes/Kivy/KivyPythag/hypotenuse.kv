<HypotenuseLayout>:
    orientation: "vertical"
    id: calculator
    leg1: leg1
    leg2: leg2
    answer: answer
    canvas:
        Color:
            rgba: [0, 0, 0.5, 1]
        Rectangle:
            pos: self.x, self.y + self.height * 0.6
            size: self.width, self.height * 0.4


    BoxLayout:
        size_hint_y: 0.4
        canvas:
            Color:
                rgb: (1,0,0)
            Rectangle:
                pos: self.x, self.y
                size: self.width, self.height
        Label:
            color: [1, 1, 1, 1]  # rgba (a is alpha from 0 to 1)
            text: "Hypotenuse Calculator"
            font_size: 70

    BoxLayout:
        orientation: "horizontal"
        size_hint_y: 0.2
        Label:
            text: "Leg 1"
            size_hint_x: 1
            font_size: 30
        TextInput:
            id: leg1
            size_hint_x: 3
            font_size: 30
            input_filter: "float"

    BoxLayout:
        orientation: "horizontal"
        size_hint_y: 0.2
        Label:
            text: "Leg 2"
            size_hint_x: 1
            font_size: 30
        TextInput:
            background_color: [1, 1, 1, 1]
            id: leg2
            size_hint_x: 3
            font_size: 30
            input_filter: "float"

    BoxLayout:
        orientation: "horizontal"
        size_hint_y: 0.2
        Button:
            color: [0,0,0,1]
            background_normal: ""
            background_color: [0.8, 0.8, 0.8, 1]
            size_hint_x: 2
            font_size: 30
            text: "Calculate"
            on_press: calculator.calculate()
        Label:
            text: "Hypotenuse:"
            font_size: 30
        Label:
            id: answer
            text: "0"
            font_size: 30

