

<AniRect>:
    canvas:
        Color:
            rgba: (0.5, 0.8, 1, 1)
        Rectangle:
            pos: self.pos
            size: self.size

<ClockRect>:
    my_color: [1,1,1,1]

    canvas:
        Color:
            rgba: self.my_color
        Rectangle:
            pos: self.pos
            size: self.size

<AniLayout>:
    ani_rect: ani_rect

    AniRect:
        id: ani_rect
        pos: 100, 100
        size: (100, 100)

    ClockRect:

        pos: [100, 100]
        size: [100, 100]


