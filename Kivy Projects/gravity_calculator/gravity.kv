<GravityLayout>:
    orientation: "vertical"
    id: calculator
    m1: m1
    m2: m2
    r: r
    newtons: newtons
    Label:
        text: "Universal Gravity Calculator"
        font_size: 60
    Label:
        text: "F="
        font_size: 30
        background_color: (0, 0, 0, 1)
        color: (1, 1, 1, 1)
        id: newtons
    BoxLayout:
        orientation: "horizontal"
        Label:
            text: "mass1 (kg)"
            font_size: 30
        TextInput:
            font_size: 30
            id: m1
            input_filter: "float"
    BoxLayout:
        orientation: "horizontal"
        Label:
            text: "mass2 (kg)"
            font_size: 30
        TextInput:
            font_size: 30
            id: m2
            input_filter: "float"
    BoxLayout:
        orientation: "horizontal"
        Label:
            text: "Distance Between (m)"
            font_size: 18
        TextInput:
            font_size: 30
            id: r
            input_filter: "float"
    BoxLayout:
        orientation: 'horizontal'
        Button:
            text: "Calculate!"
            font_size: 30
            size_hint_x: 2
            on_press: calculator.calculate()
            background_color: (0.909, 0.349, 0.639, 1)

